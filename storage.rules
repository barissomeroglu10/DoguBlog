rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profil resimleri - sadece kendi resimlerini yükleyebilir
    match /profile-images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Blog yazısı resimleri - giriş yapmış kullanıcılar yükleyebilir
    match /post-images/{postId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Genel resimler - herkes okuyabilir, giriş yapmış kullanıcılar yükleyebilir
    match /general/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
} 